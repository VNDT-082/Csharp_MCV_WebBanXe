@using LapTrinhWeb_QuanLyBanXe.Models;
@model List<LoaiXe>
<link href="~/bootstrap/css/Style_Designer.css" rel="stylesheet" />
<link href="~/bootstrap/css/bootstrap.css" rel="stylesheet" />


<div class="container">
    <div class="row text-center">
        <div class="col-md-12 mb-1">
            <ul class="nav">
                @foreach(LoaiXe l in Model)
            {
                <li class="nav-item">
                    <div class="btn_LoaiXe">
                        <a href="/Home/XeTheoLoai/@l.MaLoaiXe" class="nav-link">
                            <img class="icon_Loaixe" src="~/HinhAnh/logoHang/@l.Icon" />
                            <p>@l.TenLoaiXe</p>
                        </a>
                    </div>
                </li>
            }
            </ul>

        </div>
    </div>
</div>